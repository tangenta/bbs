type LostFoundError {
    error: String!
}

type FoundItemInfo {
    id: String!
    publisher: PersonalInfo!
    name: String!
    description: String!
    position: String!
    pictureUrl: String!
    creationTime: Long!
    contact: String!
    foundTime: Long!
}

type LostItemInfo {
    id: String!
    publisher: PersonalInfo!
    name: String!
    description: String!
    position: String!
    pictureUrl: String!
    creationTime: Long!
    contact: String!
    lostTime: Long!
}

union LostInfoResult =  LostFoundError | LostItemInfo

union FoundInfoResult = LostFoundError | FoundItemInfo

type AllLostResult {
    totalCount: Long!
    lostInfos: [LostItemInfo!]!
}

type AllFoundResult {
    totalCount: Long!
    foundInfos: [FoundItemInfo!]!
}

union PublishFoundResult = LostFoundError | FoundItemInfo

union PublishLostResult =  LostFoundError | LostItemInfo

input ItemInfoInput {
    itemName: String
    description: String
    position: String
    contact: String
    imageBase64: String
    time: Long
}

union ModifyFoundResult = LostFoundError | FoundItemInfo

union ModifyLostResult =  LostFoundError | LostItemInfo